<!DOCTYPE html>
<html lang="en" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script language="javascript" src="./js/FarsiType.js" type="text/javascript"></script>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/group-style.css" />
    <title><%= pageTitle %></title>
  </head>
  <body>
    <div class="group-form">
      <div class="group-form__box">
        <h2>گروه جدید</h2>
        <form id="make-groupForm" class="newGroup-form">
          <input type="text" name="group-name" id="group-name" lang="fa-IR" placeholder="نام گروهی که میخوای بسازی!" />
          <button id="make-groupBtn">ساخت گروه</button>
        </form>
      </div>
    </div>

    <div class="groupJoin-form">
      <div class="groupJoinForm__box">
        <h2>گروه های پیشنهادی</h2>
        <form id="joinForm" class="joinGroup-form">
          <input type="text" id="group-name-join" lang="fa-IR" placeholder="نام گروهی که میخوای ملحق بشی..." />
          <button id="joinFormBtn">ملحق شدن</button>
        </form>
      </div>
    </div>

    <div class="groupList">
      <div class="groupList__box justMargin">
        <ul class="groups">
          <% for (let groups of suggestedGroups) { %>
          <div class="group-box">
            <li>نام گروه: <%= groups.groupName %></li>
            <li>ادمین گروه: <%= groups.adminName %></li>
          </div>
          <% } %>
        </ul>
      </div>
    </div>

    <div class="mygroup-form">
      <div class="mygroup__box">
        <h2>گروه های من</h2>
        <form id="groupName-form" class="groupName-form">
          <input type="text" id="groupName-chat" lang="fa-IR" placeholder="نام گروهی که میخوای توش چت کنی..." />
          <button id="groupNameChatBtn">شروع چت</button>
        </form>
      </div>
    </div>

    <div class="groupList">
      <div class="groupList__box">
        <ul class="groups">
          <% for (let groups of myGroups) { %>
          <div class="group-box">
            <li>نام گروه: <%= groups.groupName %></li>
            <li>ادمین گروه: <%= groups.adminName %></li>
          </div>
          <% } %>
        </ul>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/group.js"></script>
  </body>
</html>
